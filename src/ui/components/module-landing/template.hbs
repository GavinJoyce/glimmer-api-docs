<section class="content-container">
  <h5 class="project-breadcrumb" onclick={{action @showProject project.slug}}></h5>
  <div class="module-header">
    {{@module.kindString}} <h3>{{@module.name}}</h3>
  </div>
  {{#if @module.sources}}
    <source-link @sources={{@module.sources}} />
  {{/if}}
  {{#if module.extendedTypes}}
    <div class="hierarchy-meta">
    <h3>Extends</h3>

    {{#each @module.extendedTypes key="@index" as |extends|}}
      <type-annotation @type={{extends}} @showModule={{action @showModule}} />
    {{/each}}
    </div>
  {{/if}}

  {{#if @module.implementedTypes}}
    <div class="hierarchy-meta">
    <h3>Implements</h3>

    {{#each @module.implementedTypes key="@index" as |implements|}}
      <type-annotation @type={{implements}} @showModule={{action @showModule}} />
    {{/each}}
    </div>
  {{/if}}

  {{#if @module.comment}}
    <markdown-viewer @text={{@module.comment.shortText}} />
    <markdown-viewer @text={{@module.comment.text}} />
  {{/if}}

  {{#if @module.constructors}}
    <div class="constructors">
      <h3>Constructor</h3>

      <method-list @showModule={{action @showModule}} @methods={{@module.constructors}} />
    </div>
  {{/if}}

  {{#if @module.methods}}
    <h3>Methods</h3>

    <method-list @showModule={{action @showModule}} @hasMethodCategories={{@module.hasMethodCategories}} @methods={{@module.methods}} />
  {{/if}}

  {{#if module.properties}}
    <variable-list @label="Properties" @variables={{@module.properties}} @showModule={{action @showModule}} />
  {{/if}}
</section>
